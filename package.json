{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "ttsc --build --force solution.tsconfig.json",
    "watch": "ttsc --build --watch solution.tsconfig.json",
    "clean": "lerna run clean",
    "rebuild": "yarn clean && yarn build",
    "demo": "node-dev --respawn packages/demo",
    "debug:demo": "node-dev --respawn --inspect packages/demo",
    "lint": "eslint --ext .ts .",
    "lint:fix": "yarn lint --fix",
    "test": "lerna run test",
    "integrate": "yarn clean && yarn lint && yarn build && yarn test"
  },
  "workspaces": [
    "packages/**/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.3",
    "lerna": "^3.14.1",
    "ts-node": "^8.8.1",
    "ttypescript": "^1.5.7",
    "typescript": "^3.5.3"
  }
}

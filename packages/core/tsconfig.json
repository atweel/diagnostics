{
  "extends": "../../default.tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",                       
    "rootDir": "./src",                      
    "baseUrl": "./src",                      
    "paths": {
      "conventions/*": ["internals/conventions/*"],
      "errors/*": ["errors/*"],
      "components/*": ["internals/components/*"],
      "decorators/*": ["internals/decorators/*"],
      "capabilities": ["capabilities"],
      "bindings": ["bindings"],
      "formatting": ["formatting"],
      "common": ["common"]
    }                          
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}

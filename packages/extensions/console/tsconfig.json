{
  "extends": "../../../default.tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",                        
    "rootDir": "./src",                       
    "baseUrl": "./src",                       
    "paths": {
      "conventions/*": ["conventions/*"],
      "errors/*": ["errors/*"],
      "components/*": ["components/*"],
      "capabilities": ["capabilities"],
      "decorators/*": ["decorators/*"],
      "bindings": ["bindings"]
    }     
  },
  "references": [
    { "path": "../../core" }
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
